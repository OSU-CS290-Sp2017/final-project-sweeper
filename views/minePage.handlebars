{{! this is a handlebars template with our list of rows}}

{{> header}}
{{!
<main id="board">
    {{#each row}}
        <div class="row">
            {{#each this}}
                <article class="cell">
                    {{#if this.flagged}} 
                        <i class="fa fa-flag cell-text"> </i>
                    {{/if}}
                    {{#unless this.flagged}} 
                        <p class="cell-text">{{this.value}}</p>
                    {{/unless}}
                </article>
            {{/each}}
        </div>
    {{/each}}
</main>
!}}
<main id="board">
    {{#each this}}
        {{> row}}
    {{/each}}
</main>
{{#if modal}}
    {{> createSweeperModal}}
{{/if}}
