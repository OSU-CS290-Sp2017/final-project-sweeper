{{! A handlebars partial for a single cell. }}

{{#if this.cleared}}
    <article class="cell cleared" id="col_{{x}}_row_{{y}}">
{{/if}}
{{#unless this.cleared}}
    <article class="cell" id="col_{{x}}_row_{{y}}">
{{/unless}}
        {{#unless this.mine}}
            <p class="cell-text hidden">
                    {{#if this.value}}
                    {{this.value}}
                    {{/if}}
            </p>
        {{/unless}}
        {{!#if this.flagged}}
            <img src="/flag.png" class="hidden">
        {{!/if}}
    </article>
